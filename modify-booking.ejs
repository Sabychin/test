<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Booking Details</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <h1>Edit Booking Details</h1>
    </header>
    <main>
        <div class="form-container">
            <form action="/modify-booking/<%= booking._id %>" method="POST">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" value="<%= booking.name %>" required>
                </div>
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="date" id="date" name="date" value="<%= booking.date.toISOString().split('T')[0] %>" required>
                </div>
                <div class="form-group">
                    <label for="time">Time:</label>
                    <input type="time" id="time" name="time" value="<%= booking.time %>" required>
                </div>
                <div class="form-group">
                    <label for="payment">Payment (USD):</label>
                    <input type="number" id="payment" name="payment" value="<%= booking.payment %>" min="0" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="card">Card Number:</label>
                    <input type="text" id="card" name="card" value="<%= booking.card %>" pattern="\d{16}" title="Card number must be 16 digits" required>
                </div>
                <div class="form-group">
                    <label for="cardExpiryDate">Card Expiry Date:</label>
                    <input type="month" id="cardExpiryDate" name="cardExpiryDate" value="<%= booking.cardExpiryDate.substring(0, 7) %>" required>
                </div>
                <div class="form-group">
                    <label for="cvc">CVC:</label>
                    <input type="text" id="cvc" name="cvc" value="<%= booking.cvc %>" pattern="\d{3}" title="CVC must be 3 digits" required>
                </div>
                <div class="form-group">
                    <label for="workshop">Workshop:</label>
                    <select id="workshop" name="workshop" required>
                        <% workshops.forEach(function(workshop) { %>
                            <option value="<%= workshop.id %>" <%= workshop.id == booking.workshop ? 'selected' : '' %>><%= workshop.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="notes">Notes:</label>
                    <textarea id="notes" name="notes"><%= booking.notes %></textarea>
                </div>
                <button type="submit">Save Changes</button>
            </form>
        </div>
    </main>
    <a href="/" class="button">Back to Home</a>
</body>
</html>
