<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a Booking</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h2>Create a Booking</h2>
    <form action="/create-booking" method="POST" class="form-container">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" required>
        </div>
        <div class="form-group">
            <label for="time">Time:</label>
            <input type="time" id="time" name="time" required>
        </div>
        <div class="form-group">
            <label for="payment">Payment (USD):</label>
            <input type="number" id="payment" name="payment" min="0" step="0.01" required>
        </div>
        <div class="form-group">
            <label for="card">Card Number:</label>
            <input type="text" id="card" name="card" pattern="\d{16}" title="Card number must be 16 digits" required>
        </div>
        <div class="form-group">
            <label for="cardExpiryDate">Card Expiry Date:</label>
            <input type="month" id="cardExpiryDate" name="cardExpiryDate" min="2023-01" max="2050-12" required>
        </div>
        <div class="form-group">
            <label for="cvc">CVC:</label>
            <input type="text" id="cvc" name="cvc" pattern="\d{3}" title="CVC must be 3 digits" required>
        </div>
        <div class="form-group">
            <label for="workshopName">Workshop:</label>
            <select id="workshopName" name="workshopName" required>
                <!-- Option values should be dynamically generated -->
                <% workshops.forEach(workshop => { %>
                    <option value="<%= workshop.name %>"><%= workshop.name %></option>
                <% }); %>
            </select>
        </div>
        <div class="form-group">
            <label for="notes">Notes:</label>
            <textarea id="notes" name="notes"></textarea>
        </div>
        <button type="submit">Create Booking</button>
    </form>
    <a href="/">Back to Home</a>
</body>
</html>
